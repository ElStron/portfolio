---
import CardExperiences from "../../CardExperiences.astro";

const experiences = [
    {
        title: "Desarrollador Web Freelance",
        body: "Freelance programmer of web pages, scripts, wordpress templates, etc, with technologies such as PHP, Javascript, typescript.",
        date: "2019 - Present",
        image: "https://cdn-icons-png.flaticon.com/512/8152/8152528.png",
        tecnologies: ["Astro", "React", "Typescript"],
    },{
        title: "Catlyus",
        body: "Development of a popular link shortener with more than 1 million month visits.",
        date: "2016 - 2019",
        image:"https://pbs.twimg.com/profile_images/743830388175413248/to8eSuFW_400x400.jpg",
        tecnologies: ["PHP", "HTML", "CSS", "Javascript"],
    },{
        title: "Content creator",
        body: `Creator of content on Youtube about computer science and various topics. <a class="channel" href="https://youtube.com/@Stron_" target="_blank">https://youtube.com/@Stron_</a>`,
        date: "2012 - 2016",
        image:"https://images.ctfassets.net/xct4vv2g1nhc/7vcygM1sA84BaiQDnpxM5y/b8d1b3cafa0dde2264e3292c633d27e9/youth-sports-youtube-channel.png",
        tecnologies: ["Astro", "React", "Express", "Typescript"],
    }   
]
---
<div id="experience">
    <div class="container">
        {
            experiences.map((project, index) => {
                const { title, body, image, date } = project

                const order = index % 2 === 0 ? true : false

                return(
                    
                    <CardExperiences
                        title={title}
                        body={body}
                        image={image}
                        date={date}
                        {order}
                    />
                )
            })
        }
    </div>
</div>

<style>
    #experience {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100dvh;
        margin-top: 90px;
        justify-content: center;
        align-items: center;
        padding:0 12px;
    }
    #experience>.container {
        display: flex;
        width: 100%;
        flex-direction: column;
        gap: 3rem;
        
    }

    @media (width < 800px) {
        #experience {
            margin-top: 120px;
            min-height: auto;
        }
    }


</style>
